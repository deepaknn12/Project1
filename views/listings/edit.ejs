        <br/><br/>

        <label for="Image">Image URL:</label>
        <input type="text" id="Image" name="listing[Image]" value="<%=listing.Image%>" class="form-input">
        <br/><br/>

        <label for="location">Location:</label>
        <input type="text" id="location" name="listing[location]" value="<%=listing.location%>" class="form-input">
        <br/><br/>

        <label for="Country">Country:</label>
        <input type="text" id="Country" name="listing[Country]" value="<%=listing.Country%>" class="form-input">
        <br/><br/>

        <button type="submit" class="form-button">Edit</button>
